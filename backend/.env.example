# ==================== DATABASE CONFIGURATION ====================
# PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
# Example: postgresql://postgres:password@localhost:5432/dayflow_hrms
DATABASE_URL="postgresql://dayflow_user:dayflow123@localhost:5432/dayflow_hrms"

# Prisma (usually same as DATABASE_URL)
PRISMA_DATABASE_URL="postgresql://dayflow_user:dayflow123@localhost:5432/dayflow_hrms"

# ==================== SERVER CONFIGURATION ====================
# Server port
PORT=5000

# Node environment (development, production, test)
NODE_ENV=development

# Frontend URL for CORS (Default: http://localhost:5173 for Vite)
CORS_ORIGIN=http://localhost:5173

# ==================== SECURITY CONFIGURATION ====================
# JWT secret key - CHANGE THIS IN PRODUCTION!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-12345678

# JWT expiration (in days)
JWT_EXPIRY=7

# ==================== EMAIL CONFIGURATION (OPTIONAL) ====================
# SMTP configuration for sending emails
# Gmail: https://support.google.com/accounts/answer/185833

# SMTP Host
SMTP_HOST=smtp.gmail.com

# SMTP Port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# Use TLS (true for port 587, false for port 465)
SMTP_SECURE=false

# SMTP Username (usually email address)
SMTP_USER=your-email@gmail.com

# SMTP Password (App password for Gmail)
SMTP_PASS=your-app-specific-password

# From email address for notifications
SMTP_FROM=noreply@dayflow-hrms.com

# ==================== APPLICATION CONFIGURATION ====================
# Frontend URL for verification links
FRONTEND_URL=http://localhost:3000

# Application Name
APP_NAME=Dayflow HRMS

# Application version
APP_VERSION=1.0.0

# ==================== LOGGING CONFIGURATION ====================
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable file logging
LOG_TO_FILE=true

# ==================== DEVELOPMENT CONFIGURATION ====================
# Enable debug mode (verbose logging)
DEBUG=false

# Enable mock data on startup
MOCK_DATA=false

